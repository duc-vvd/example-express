extends ../layouts/common

block content

	h1.mb-5 Products
	
	.container
		.row
			each product in products
				.col-md-12.col-lg-3.col.mb-4
					.card
						img.card-img-top(src=product.image, alt='#')
						.card-body
							h5.card-title= product.name
							p.card-text= product.description
							a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart

	.container
		.row.d-flex.justify-content-center
			nav(aria-label='Page navigation example')
				ul.pagination

					if page > 1
						li.page-item
							a.page-link(href='/products?page=' + (page - 1), aria-label='Previous', aria-disabled="true")
								span(aria-hidden='true') &laquo;
								span.sr-only Previous

					- var n = 1
					while n <= pages
						li.page-item
							a.page-link(href='/products?page=' + n)= n
						- n++;

					if page < 13
						li.page-item
							a.page-link(href='/products?page=' + (page + 1), aria-label='Next')
								span(aria-hidden='true') &raquo;
								span.sr-only Next