extends ../layouts/common

block content

	h1 
		span Users

		a.btn.btn-primary.ml-3(href="/users/create") New
	.d-flex.alight-items-center
		form.ml-auto.d-flex(action="/users/search", method="get")
			input.form-control.mr-2(type="text", name="q")
			button.btn.btn-primary Search

	table.table
		tr
			th Name
			th Phone
			th
		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a.btn.btn-light(href="/users/" + user.id) View